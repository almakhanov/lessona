<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:padding="4dp"
            android:id="@+id/toolbar"
            android:elevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">

        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/qwe"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

        <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/ic_settings"
                android:tint="@color/colorWhite"
                android:layout_marginRight="8dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toTopOf="@id/navBar"
            android:layout_width="match_parent"
            android:background="@color/colorGrey2"
            android:layout_height="0dp">


        <android.support.constraint.ConstraintLayout
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:elevation="4dp"
                android:id="@+id/profilTop"
                android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_margin="16dp"
                    android:id="@+id/photoImageView"
                    app:cardCornerRadius="100dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageView
                        android:src="@drawable/sir"
                        android:layout_width="64dp"
                        android:layout_height="64dp"/>

            </android.support.v7.widget.CardView>

            <TextView
                    android:text="Аль-Салим Байжанов"
                    android:textColor="@color/colorBlack"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="20sp"
                    android:id="@+id/name"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/openTextView"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toRightOf="@id/photoImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <TextView
                    app:layout_constraintTop_toBottomOf="@id/name"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="Открыть профиль"
                    android:layout_marginBottom="12dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintLeft_toRightOf="@id/photoImageView"
                    android:id="@+id/openTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
                app:layout_constraintTop_toBottomOf="@id/profilTop"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:layout_height="wrap_content">


            <android.support.constraint.ConstraintLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:elevation="4dp"
                    android:layout_height="wrap_content">


                <!--Text and icons-->


            </android.support.constraint.ConstraintLayout>



        </android.support.constraint.ConstraintLayout>


    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
            android:id="@+id/navBar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:elevation="8dp"
            android:padding="12dp"
            android:background="@color/colorWhiteGrey"
            android:layout_height="wrap_content">

        <ImageView
                android:src="@drawable/ic_home"
                android:tint="@color/colorGrey"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/homeImageView"
                android:layout_marginLeft="16dp"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

        <ImageView
                android:src="@drawable/ic_search"
                android:tint="@color/colorGrey"
                app:layout_constraintLeft_toRightOf="@id/homeImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/searchImageView"
                app:layout_constraintRight_toLeftOf="@id/chatImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

        <ImageView
                android:src="@drawable/ic_chat"
                android:tint="@color/colorGrey"
                app:layout_constraintLeft_toRightOf="@id/searchImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/chatImageView"
                app:layout_constraintRight_toLeftOf="@id/notificationImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

        <ImageView
                android:src="@drawable/ic_notification"
                android:tint="@color/colorGrey"
                app:layout_constraintLeft_toRightOf="@id/chatImageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/notificationImageView"
                app:layout_constraintRight_toLeftOf="@id/pofileImageView"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

        <ImageView
                android:src="@drawable/ic_dehaze"
                app:layout_constraintRight_toRightOf="parent"
                android:tint="@color/colorAccent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/pofileImageView"
                android:layout_marginRight="16dp"
                android:layout_width="32dp"
                android:layout_height="32dp" app:layout_constraintVertical_bias="0.333"/>


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>